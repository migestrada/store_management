<div class="container">
  <div class="d-flex align-items-center justify-content-between">
    <h1>Products</h1>
    <%= link_to 'New', new_product_path, class: 'btn btn-primary' %>
  </div>
  <div class="row">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <%= render partial: 'products/index/table_row', locals: { product: product }%>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>