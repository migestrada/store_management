<tr id="<%= product.id %>">
  <td><%= product.name.titleize %></td>
  <td><%= product.code.upcase %></td>
  <td><%= number_to_currency(product.price, presicion: 0) %></td>
  <td>
    <%= link_to 'Edit', edit_product_path(product.id), class: 'btn btn-primary' %>

    <%= link_to 'Delete', product_path(product.id), class: 'btn btn-danger', data: { turbo_method: :delete }%>
  </td>
</tr>